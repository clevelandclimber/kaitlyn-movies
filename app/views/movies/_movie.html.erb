<%= link_to movie, class: "flex flex-col w-72 rounded overflow-hidden shadow-lg dark:bg-neutral-800" do %>
  <%= image_tag movie.poster_image, class: "aspect-16/9 w-full object-cover", alt: "Poster for #{movie.name}" %>
  <div class="px-6 py-4 grow">
    <p class="font-bold text-gray-900 dark:text-gray-300"><%= movie.name %></p>
    <p class="text-gray-400 text-xs"><%= movie.year ? movie.year : "?" %></p>
    <p class="text-gray-700 dark:text-gray-500 text-sm mt-2">
      <%= movie.premise %>
    </p>
  </div>
  <div class="px-6 pt-1 pb-2">
    <% if movie.must_see != "no" %>
      <span class="text-gray-400 dark:text-gray-400 text-xs"><%= Movie.enum_to_s :must_see, movie.must_see %></span>
    <% end %>
<!--    <% if movie.believable %>
      <span class="dark:text-gray-400 dark:bg-slate-600 text-xs p-1 rounded-full"><%= Movie.enum_to_s :believable, movie.believable %></span>
    <% end %>
-->
  </div>
<% end %>
